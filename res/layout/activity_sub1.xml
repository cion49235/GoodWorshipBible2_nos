<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
    <LinearLayout 
        android:id="@+id/bible_navigator_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:gravity="center"
        android:background="#e6e6e6">
        <Button 
            android:id="@+id/bt_kwon"
            android:textStyle="bold"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:paddingLeft="5dip"
            android:gravity="left|center"
            android:background="@drawable/btn_bg_select"/>
         <Button 
            android:id="@+id/bt_jang"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dip"
            android:gravity="left|center"
            android:background="@drawable/btn_bg_select"/>
    </LinearLayout>
    <LinearLayout 
	    android:gravity="top"
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
        <include 
            layout="@layout/menu_top" />
    </LinearLayout>
    
    <RelativeLayout
	   android:layout_width="fill_parent"
	   android:layout_height="0dip"
	   android:layout_weight="1">
	<LinearLayout
	    android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:visibility="visible">
		<ListView
	        android:id="@+id/listview_sublist"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="1dip"
	        android:divider="#00000000"/>
	</LinearLayout>
	</RelativeLayout>
	
    <LinearLayout 
	    android:id="@+id/action_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:visibility="gone" >
        <Button
            android:id="@+id/bt_action1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_sub_action1_1"
            android:textSize="11dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/bt_action2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_sub_action2"
            android:textSize="11dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/bt_action3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_sub_action3_1"
            android:textSize="11dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/bt_action4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_sub_action4"
            android:textSize="11dp"
            android:textColor="#000000"/>
	</LinearLayout>
		    <RelativeLayout
		          android:visibility="gone"
		          android:id="@+id/admob_native"
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:layout_gravity="center_horizontal"
		          android:gravity="center"> 
		    </RelativeLayout>	
    <RelativeLayout
          android:id="@+id/ad_layout"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" 
          android:layout_gravity="center_horizontal"> 
    </RelativeLayout>
    
    <RelativeLayout 
          android:id="@+id/voice_control_panel_layout"
          android:layout_width="fill_parent"
          android:layout_height="50dip" 
          android:layout_gravity="center_horizontal"
          android:background="#e6e6e6" >
	      <LinearLayout
             android:orientation="vertical" 
             android:layout_width="fill_parent" 
             android:layout_height="wrap_content">
            <LinearLayout 
                android:gravity="center" 
                android:orientation="horizontal" 
                android:id="@+id/control_btn_layout"
                android:layout_width="fill_parent" 
                android:layout_height="30dip"
                android:layout_marginTop="0.0dip">
                <SeekBar 
                    android:id="@+id/mediacontroller_progress"
                    android:layout_width="0dip" 
                    android:layout_height="wrap_content" 
                    android:layout_weight="1.0" 
                    android:maxHeight="10.0dip"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:minHeight="10.0dip"
                    android:layout_marginLeft="5.0dip" 
                    android:layout_marginRight="5.0dip"  
                    android:thumb="@drawable/seek_thumb"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip" />
                <ImageButton
                     android:id="@+id/bt_duration_rew"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                      style="@style/MediaButton.Rew_Small" />
                <ImageButton
                     android:id="@+id/bt_pause"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                      style="@style/MediaButton.Play_Small" />
                <ImageButton
                     android:id="@+id/bt_duration_ffwd"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                      style="@style/MediaButton.Ffwd_Small" />
            </LinearLayout>
            <FrameLayout 
                android:id="@+id/time_layout" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.0dip">
                <TextView 
                    android:textSize="10.0dip"
                    android:textColor="#000000"
                    android:layout_gravity="left" 
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="10.0dip"
                    android:text="00:00" />
                <TextView
	                 android:textColor="#000000"
	                 android:textSize="10.0dip"
	                 android:ellipsize="marquee" 
	                 android:layout_gravity="center"
	                 android:id="@+id/txt_voice_title"
	                 android:layout_width="wrap_content" 
	                 android:layout_height="wrap_content"
	                 android:marqueeRepeatLimit="marquee_forever"
	                 android:singleLine="true"
	                 android:text="@string/txt_hymn_ready" />
                <LinearLayout
                    android:visibility="invisible" 
                    android:orientation="vertical"
                    android:id="@+id/layout_progress" 
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content" 
                    android:layout_centerInParent="true" 
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                     <ProgressBar 
                         android:layout_gravity="center" 
                         android:id="@android:id/progress"
                         android:paddingLeft="10.0dip"
                         android:paddingRight="10.0dip"
                         android:layout_width="wrap_content" 
                         android:layout_height="wrap_content" 
                         style="?android:progressBarStyleSmall" />	
                    </LinearLayout>
                <TextView 
                    android:textSize="10.0dip" 
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:id="@+id/max_time" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_marginRight="10.0dip"
					android:text="00:00" />
            </FrameLayout>
        </LinearLayout>		
    </RelativeLayout>
    
	<LinearLayout 
	    android:gravity="bottom"
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
        <include 
            layout="@layout/menu_bottom" />
    </LinearLayout>
</LinearLayout>

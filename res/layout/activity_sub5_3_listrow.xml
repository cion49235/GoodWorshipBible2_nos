<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" 
    android:paddingLeft="0.0dip" 
    android:paddingTop="2.0dip" 
    android:paddingRight="5.0dip" 
    android:paddingBottom="2.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    
    <FrameLayout 
        android:layout_gravity="center_vertical" 
        android:padding="1.0dip" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="0.0dip"
        android:layout_marginRight="1.0dip">
        <ImageView
            android:id="@+id/img_favorite_imageurl" 
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"/>
    </FrameLayout>
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="3.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_weight="1.0">
        <TextView 
            android:textSize="15.0sp" 
            android:ellipsize="marquee"
            android:id="@+id/txt_favorite_title"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="8.0dip"
            android:singleLine="true" />
        
        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginRight="5.0dip">
            
            <TextView 
                android:textSize="12.0sp"
                android:ellipsize="marquee"
                android:id="@+id/txt_favorite_provider" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:singleLine="true" 
                android:layout_weight="1.0" />
            <TextView android:textSize="11.0sp"
                 android:visibility="invisible"
                 android:id="@+id/txt_favorite_udate"
                 android:textColor="#e6e6e6" 
                 android:background="@drawable/bg_description" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <ImageButton 
        android:layout_gravity="center_vertical" 
        android:id="@+id/bt_favorite_delete"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5.0dip" 
        android:src="@drawable/btn_bg_delete" />
</LinearLayout>
